@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
  
<h2>Роли</h2>
<a asp-action="Create" class="btn btn-sm btn-primary">Создать новую роль</a>
 
<div class="articles-list">
   <table class="table table-sm table-bordered table-bordered">
       <tr class="tr__main"><th>Название</th><th>Пользователи с данной ролью</th></tr>
       @foreach (var role in Model)
       {
           <tr>
               <td>@role.Name</td>
               <td i-role="@role.Id"></td>
               <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Обновить</a></td>
               <td>
                   <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                       <button type="submit" class="btn btn-sm btn-danger">
                           Удалить
                       </button>
                   </form>
               </td>
           </tr>
       }
   </table>
</div>